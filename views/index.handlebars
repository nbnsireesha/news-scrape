<div>
    <div class="row">
      <div class="col s3"></div>
      <h5 class="card z-depth-3 center-align col s6 scrapeText">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>

<div class="row">
  <div class="col s2"></div>
  <div class ="col s8 left-align">
    {{#each article}}
      <div class="card-panel">
        <h4>{{this.title}}</h4>
        {{!-- goes to article.handlebars --}}
        <a href = "/readArticle/{{this._id}}" class="waves-effect waves-light btn brown lighten-1" id="btnSignUp">Read Article</a>
        <!-- <a href = "/save/{{this._id}}" class="waves-effect waves-light btn brown lighten-1" id="btnSignUp">Save Article</a> -->
        <form action="/save/{{this._id}}" method="POST">

          <input class="btn add-comment-button brown lighten-1" type="submit" value="Save Article">
          
        </form>
      </div>
    {{/each}}
  </div>
</div>